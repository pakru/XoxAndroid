<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/player1tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="5dp"
            android:text="Player 1"

            />

        <TextView
            android:id="@+id/player2tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:layout_gravity="right|center_vertical"

            android:text="Player 2"
            />


    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/cell_11"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                 />

            <Button
                android:id="@+id/cell_12"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                />

            <Button
                android:id="@+id/cell_13"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/cell_21"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                />

            <Button
                android:id="@+id/cell_22"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                />

            <Button
                android:id="@+id/cell_23"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/cell_31"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                />

            <Button
                android:id="@+id/cell_32"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                />

            <Button
                android:id="@+id/cell_33"
                android:layout_height="@dimen/CellButtonHeight"
                android:layout_width="@dimen/CellButtonHeight"
                android:text=""
                android:textAppearance="@style/CellButtonStyle"
                />
        </TableRow>

    </TableLayout>


</LinearLayout>
